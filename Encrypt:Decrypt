def caesar_cipher(text, shift, mode):
    result = ''
    for char in text:
        if 'a' <= char <= 'z':
            start = ord('a')
        elif 'A' <= char <= 'Z':
            start = ord('A')
        else:
            result += char
            continue
        shifted_char = chr((ord(char) - start + shift) % 26 + start)
        result += shifted_char
    return result


def main():
    text = input("Enter the text: ")
    while True:
        try:
            shift = int(input("Enter the shift value (integer): "))
            break
        except ValueError:
            print("Invalid input. Please enter an integer.")

    while True:
        mode = input("Enter E for encrypt or D for decrypt: ").lower()
        if mode in ('e', 'd'):
            break
        else:
            print("Invalid mode. Please enter 'E' or 'D'.")
    if mode == 'd':
        shift = -shift 
    encrypted_text = caesar_cipher(text, shift, mode)
    print("Result:", encrypted_text)

while True:
    main()
    c = str(input("Would you like to continue? (Y/N) "))
    if c == "y".lower():
        continue
    elif c == "n".lower():
        break
    else:
        print("Please enter a valid option")
